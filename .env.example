# LINE Bot Configuration
LINE_CHANNEL_SECRET=your_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here

# Database Configuration
# 開発環境: SQLite
# DATABASE_URL=sqlite:///shift_bot.db

# 本番環境: PostgreSQL (Render, Railway等)
DATABASE_URL=postgresql://user:password@host:5432/database_name

# Environment
ENVIRONMENT=development  # development or production

# Error Monitoring
SENTRY_DSN=your_sentry_dsn_here
LINE_NOTIFY_TOKEN=your_line_notify_token_here
DEVELOPER_EMAIL=developer@example.com

# Email Configuration (Optional - エラー通知用)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application Settings
SECRET_KEY=your_random_secret_key_here_change_in_production
DEBUG=False

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Rate Limiting
RATE_LIMIT_ENABLED=True
MAX_REQUESTS_PER_HOUR=100

# Session Settings
SESSION_TIMEOUT_MINUTES=30

# Timezone
TIMEZONE=Asia/Tokyo

# Labor Law Settings (労働法設定)
MAX_WORK_HOURS_PER_DAY=8
MAX_WORK_HOURS_PER_WEEK=40
MIN_REST_TIME_6H=45  # 6時間超の場合の休憩(分)
MIN_REST_TIME_8H=60  # 8時間超の場合の休憩(分)
MAX_CONSECUTIVE_WORK_DAYS=6

# Shift Settings
MAX_STAFF_PER_SHIFT=10
MIN_STAFF_PER_SHIFT=2
SHIFT_GENERATION_LOOKAHEAD_DAYS=14
